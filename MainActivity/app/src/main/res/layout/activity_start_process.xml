<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Processing.startProcessActivity">


    <EditText
        android:id="@+id/textViewN1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="insert text"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/textViewN2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <EditText
        android:id="@+id/textViewN2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="insert text"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/buttonProcess1"
        app:layout_constraintStart_toStartOf="@+id/textViewN1"
        app:layout_constraintTop_toBottomOf="@+id/textViewN1" />

    <Button
        android:id="@+id/buttonProcess1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:text="Start process 1"
        app:layout_constraintBottom_toTopOf="@+id/buttonProcess2"
        app:layout_constraintStart_toStartOf="@+id/textViewN2"
        app:layout_constraintTop_toBottomOf="@+id/textViewN2" />

    <Button
        android:id="@+id/buttonProcess2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="Start process 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/buttonProcess1"
        app:layout_constraintTop_toBottomOf="@+id/buttonProcess1" />

</androidx.constraintlayout.widget.ConstraintLayout>