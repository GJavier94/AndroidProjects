<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="FirstTimeOpened"
            app:layout_constraintBottom_toTopOf="@+id/TextViewcontactInfo"
            app:layout_constraintEnd_toEndOf="@+id/TextViewcontactInfo"
            app:layout_constraintStart_toStartOf="@+id/TextViewcontactInfo"
            app:layout_constraintTop_toTopOf="parent" />

        <Button

            android:id="@+id/buttonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonChooseContact"
            tools:layout_editor_absoluteX="143dp" />

        <Button
            android:id="@+id/buttonActionSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start Activity Outside"
            app:layout_constraintBottom_toTopOf="@+id/buttonStartActivityService"
            app:layout_constraintEnd_toEndOf="@+id/TextViewcontactInfo"
            app:layout_constraintStart_toStartOf="@+id/TextViewcontactInfo"
            app:layout_constraintTop_toBottomOf="@+id/TextViewcontactInfo" />

        <Button
            android:id="@+id/buttonStartUIActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="Start UI activity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonChooseContact"
            app:layout_constraintTop_toTopOf="@+id/buttonChooseContact" />

        <TextView
            android:id="@+id/TextViewcontactInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            app:layout_constraintBottom_toTopOf="@+id/buttonActionSend"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/buttonChooseContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Choose Contact"
            app:layout_constraintBottom_toTopOf="@+id/buttonStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonStartActivityService" />

        <Button
            android:id="@+id/buttonStartActivityService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start process ACT"
            app:layout_constraintBottom_toTopOf="@+id/buttonChooseContact"
            app:layout_constraintEnd_toEndOf="@+id/buttonActionSend"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/buttonActionSend"
            app:layout_constraintTop_toBottomOf="@+id/buttonActionSend"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>