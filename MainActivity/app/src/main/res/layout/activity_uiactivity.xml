<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavingStates.Activities.UIActivity">

    <TextView
        android:id="@+id/textViewUI1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MessageExplanation"
        app:layout_constraintBottom_toTopOf="@+id/textViewUI2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewUI2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textViewUI3"
        app:layout_constraintEnd_toEndOf="@+id/textViewUI1"
        app:layout_constraintStart_toStartOf="@+id/textViewUI1"
        app:layout_constraintTop_toBottomOf="@+id/textViewUI1" />

    <TextView
        android:id="@+id/textViewUI3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/buttonResetNumbers"
        app:layout_constraintEnd_toEndOf="@+id/textViewUI2"
        app:layout_constraintStart_toStartOf="@+id/textViewUI2"
        app:layout_constraintTop_toBottomOf="@+id/textViewUI2" />

    <Button
        android:id="@+id/buttonResetNumbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset numbers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewUI3"
        app:layout_constraintStart_toStartOf="@+id/textViewUI3"
        app:layout_constraintTop_toBottomOf="@+id/textViewUI3" />

    <Button
        android:id="@+id/buttonIncreaseCounting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increase counting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textViewUI3"
        app:layout_constraintStart_toStartOf="@+id/textViewUI3"
        app:layout_constraintTop_toBottomOf="@+id/buttonResetNumbers" />
</androidx.constraintlayout.widget.ConstraintLayout>