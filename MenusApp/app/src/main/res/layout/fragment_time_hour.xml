<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentTimeHour">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_fragment_time_hour"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical ="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

        </androidx.appcompat.widget.Toolbar>



        <TextView
            android:id="@+id/textViewFragmentTimeHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_fragment_time_hour"
            android:text="@string/fragment_time_hour"
            app:layout_constraintEnd_toStartOf="@id/button_show_settings"/>
        <Button
            android:id="@+id/button_show_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="show settings"
            app:layout_constraintTop_toBottomOf="@id/toolbar_fragment_time_hour"

            app:layout_constraintStart_toEndOf="@id/textViewFragmentTimeHour"
            app:layout_constraintEnd_toEndOf="parent">

        </Button>



    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>